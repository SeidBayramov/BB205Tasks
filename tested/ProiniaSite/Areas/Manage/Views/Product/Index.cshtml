@using ProiniaSite.Models
@model List<Product>

@{
    int count = 0;
}
<div class="container">
    <div class="d-flex" style="justify-content:space-between;align-items:center">
        <h1>Products</h1>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create</a>

    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No#</th>
                <th scope="col">Name</th>
                <th scope="col">SKU</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Tags</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>

                    <td>@item.Name</td>
                    <td>@item.SKU</td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>
             <td>
                 @foreach (var pt in item.ProductTags)
                        {
                            @pt.Tag.Name;
                        }
                        
                    </td>

                   
                    <td>
                        <a class="btn btn-secondary" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>