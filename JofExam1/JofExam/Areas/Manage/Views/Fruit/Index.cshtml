@using JofExam.Models
@model List<Fruit>

@{
    int count = 0;
}
<div class="container">
    <div class="d-flex" style="justify-content:space-between;align-items:center">
        <h1>Fruits</h1>
        <a class="btn btn-primary" asp-controller="Fruit" asp-action="Create">Create</a>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No#</th>
                <th scope="col">Name</th>
                <th scope="col">SubTitle</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>

                    <th>@item.Name</th>
                    <td>@item.SubTitle</td>

                    <td>
                        <div style="width:100px">
                            <img width="100%;height:150px" src="~/Upload/@item.ImageUrl">
                        </div>
                    </td>


                    <td>
                        <a class="btn btn-secondary" asp-controller="Fruit" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger item-delete" asp-controller="Fruit" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>