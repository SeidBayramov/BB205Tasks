@using ExamMaxim.Models;
@model List<Service>

@{
    int count = 0;
}
<div class="container">
    <div class="d-flex" style="justify-content:space-between;align-items:center">
        <h1>Products</h1>
        <a class="btn btn-primary" asp-controller="Service" asp-action="Create">Create</a>

    </div>

    @* <span style='color:red'>@TempData["Error"]</span>*@

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No#</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Icon</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>

                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                    <td><div class="icon">@Html.Raw(item.IconUrl)</div></td>
                        </td>
                    <td>
                        <a class="btn btn-secondary" asp-controller="Service" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger item-delete" asp-controller="Service" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>