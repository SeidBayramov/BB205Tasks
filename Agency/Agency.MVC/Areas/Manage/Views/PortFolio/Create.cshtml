@using Agency.Busines.ViewModel.Portfolio;
@model PortfolioCreateVm
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-3">
                <label asp-for="Title" class="form-label">Name</label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="mb-3 col-md-6">
                <label asp-for="SubTitle" class="form-label">SubTitle</label>
                <textarea class="form-control" asp-for="SubTitle" rows="4"></textarea>
                <span asp-validation-for="SubTitle" style="color:red"></span>

            </div>

            <div class="row">
                <div class="mb-3 col-md-6">
                    <label asp-for="ImageFile" class="form-label">Photo</label>
                    <input asp-for="ImageFile" class="form-control">
                    <span asp-validation-for="ImageFile" style="color:red"></span>
                </div>

            </div>

        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>