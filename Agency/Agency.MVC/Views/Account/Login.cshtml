@using Agency.Busines.ViewModel.Account;
@model LoginVm

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6" style="justify-content: space-around;">
                <form method="post">
                    <div class="login-form">
                        <p><span class="font-weight-bold">Login</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="UsernameOrEmail">Username Or Email</label>
                                <input asp-for="UsernameOrEmail" class="mb-0 form-control" type="text" id="name"
                                       placeholder="Enter your full name" />
                                <span asp-validation-for="UsernameOrEmail" style="color:red"></span>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="mb-0 form-control" id="password" type="password" placeholder="Enter your Password" />
                                    <span asp-validation-for="Password" style="color:red"></span>
                                </div>
                                </div>
                                <div class="col-md-12 col-12 mb--15" asp-validation-summary="All">
                                    <button asp-action="Login" type="submit" asp-controller="Account" class="btn btnbadge-outlined">Login</button>
                                </div>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</main>