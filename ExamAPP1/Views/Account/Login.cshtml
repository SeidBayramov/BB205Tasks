@using ExamAPP1.ViewModels;
@model LoginVm

<div style="display:flex;justify-content:center;margin-top:100px">
    <div class="col-sm-12 col-md-6 col-xs-12 col-lg-6 mb--30 mb-lg-0" style="display:flex; justify-content:center;">
        <form method="post">
            <div class="login-form">
                <p><span class="font-weight-bold">Login</span></p>
                <div class="row">
                    <div class="col-12 mb--20">
                        <label asp-for="UserNameorEmail">Username Or Email</label>
                        <input asp-for="UserNameorEmail" class="mb-0 form-control"  placeholder="Enter your full name" />
                        <span asp-validation-for="UserNameorEmail" style="color:red"></span>
                    </div>
                    <div class="col-lg-6 mb-20">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" class="mb-0 form-control" id="password" type="password" placeholder="Enter your Password" />
                        <span asp-validation-for="Password" style="color:red"></span>
                    </div>
                    <div class="col-md-12" asp-validation-summary="All">
                        <button asp-action="Login" type="submit" asp-controller="Account" class="btn btnbadge-outlined">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
